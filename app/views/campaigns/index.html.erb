<table class="table table-bordered table-striped">
  <tr>
    <td colspan="12"><span style="float:right;"><%= link_to "Add New",new_campaign_path, :class => "btn btn-small btn-info"%></span></td>
  </tr>
  <tr>
    <th>Campaign Type</th>
    <th>Status</th>
    <th>Name</th>
    <th>Organization</th>
    <th>NPO Name</th>
    <th>Campaign url</th>
    <th>Description</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Goal</th>
    <th>Action</th>
  </tr>
  
  <% @campaigns.each do |camp| %>
  <tr>
    <td><%= camp.campaign_type %></td>
    <td><%= camp.status %></td>
    <td><%= camp.name %></td>
    <td><%= camp.organization %></td>
    <td><%= camp.npo_name %></td>
    <td><%= camp.campaign_url %></td>
    <td><%= camp.description %></td>
    <td><%= camp.start_date %></td>
    <td><%= camp.end_date %></td>
    <td>$<%= camp.goal %></td>
    <td><%= link_to "Edit", edit_campaign_path(camp), :class => "btn btn-mini btn-info" %>|
        <%= link_to "Delete", camp, :data => {:confirm => "Are You Sure?"},:method => :delete, :class => "btn btn-mini btn-danger" %></td>
  </tr>
  <% end %>
</table>