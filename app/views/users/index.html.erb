<table class="table table-bordered table-striped">
  <tr>
    <td colspan="6"><%= link_to "Add New",new_admin_dashboard_path %></td>
  </tr>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Type</th>
    <th>Action</th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.user_type %></td>
    <td><%= link_to "Edit", edit_admin_dashboard_path(user), :class => "btn btn-mini btn-info" %>|
    <%= link_to "Delete", "/admin/dashboards/#{user.id}", :data => {:confirm => "Are you sure?"}, :method => "delete", :class => "btn btn-mini btn-danger" %>
    </td>
  </tr>
  <% end %>
</table>